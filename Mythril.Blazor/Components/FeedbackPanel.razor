@using Mythril.Blazor.Services
@using Microsoft.JSInterop
@using Newtonsoft.Json
@inject FeedbackService FeedbackService
@inject SnackbarService SnackbarService
@inject IJSRuntime JS

<div class="feedback-panel mt-4">
    <h4>Submit Feedback</h4>
    <p class="small text-muted">A GitHub account is required to permanently record feedback.</p>
    
    <div class="card p-3">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" @bind="_title" placeholder="Short summary..." />
        </div>
        <div class="mb-3">
            <label class="form-label">Type</label>
            <select class="form-select" @bind="_type">
                @foreach (var type in Enum.GetValues<FeedbackType>().Where(t => t != FeedbackType.Error))
                {
                    <option value="@type">@type</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" @bind="_description" rows="3" placeholder="Explain the issue or suggestion..."></textarea>
        </div>
        <div class="btn-group">
            <a href="@GetManualGitHubUrl()" target="_blank" class="btn btn-primary @(CanSubmit ? "" : "disabled")" @onclick="RecordLocalAttempt">
                Submit to GitHub
            </a>
            <button class="btn btn-outline-secondary" @onclick="SaveLocally" title="Save for later or if you don't have an account">
                Save Locally
            </button>
        </div>
    </div>

    @if (_pendingCount > 0)
    {
        <div class="alert alert-info mt-3">
            <h6>Pending Items (@_pendingCount)</h6>
            <p class="small">These items are saved in your browser. Click 'Submit to GitHub' for each to make them public.</p>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-danger" @onclick="ClearFeedback">Clear All Local</button>
            </div>
        </div>

        <div class="feedback-list mt-2">
            <div class="list-group">
                @foreach (var entry in _recentEntries)
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 @(entry.Type == FeedbackType.Error ? "text-danger" : "")">
                                @entry.Title
                            </h6>
                            <small>@entry.Date.ToShortTimeString()</small>
                        </div>
                        <p class="mb-1 small text-truncate">@entry.Description</p>
                        <a href="@FeedbackService.GetGitHubIssueUrl(entry)" target="_blank" class="btn btn-sm btn-link p-0">Submit to GitHub</a>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private string _title = "";
    private string _description = "";
    private FeedbackType _type = FeedbackType.Suggestion;
    private int _pendingCount = 0;
    private List<FeedbackEntry> _recentEntries = [];

    private bool CanSubmit => !string.IsNullOrWhiteSpace(_title) && !string.IsNullOrWhiteSpace(_description);

    protected override async Task OnInitializedAsync()
    {
        await UpdateCount();
    }

    private string GetManualGitHubUrl()
    {
        if (!CanSubmit) return "#";
        return FeedbackService.GetGitHubIssueUrl(new FeedbackEntry { 
            Title = _title, 
            Description = _description, 
            Type = _type,
            Date = DateTime.Now
        });
    }

    private async Task RecordLocalAttempt()
    {
        // When they click the link, also save it locally just in case they close the tab or it fails
        await SaveLocally();
    }

    private async Task UpdateCount()
    {
        var all = await FeedbackService.GetPendingFeedback();
        _pendingCount = all.Count;
        _recentEntries = all.OrderByDescending(x => x.Date).Take(10).ToList();
    }

    private async Task SaveLocally()
    {
        if (!CanSubmit) return;

        var entry = new FeedbackEntry
        {
            Title = _title,
            Description = _description,
            Type = _type,
            Date = DateTime.Now
        };

        await FeedbackService.AddFeedback(entry);
        _title = "";
        _description = "";
        await UpdateCount();
        SnackbarService.Show("Saved to local backlog.", "success");
    }

    private async Task ClearFeedback()
    {
        await FeedbackService.ClearFeedback();
        await UpdateCount();
        SnackbarService.Show("Local backlog cleared.", "info");
    }
}
