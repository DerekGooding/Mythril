@using Mythril.Data

<div class="task-progress-card">
    <div class="task-header">@TaskProgress?.Quest.Title</div>
    <div class="task-body">
        <p>@TaskProgress?.Quest.Description</p>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: @(TaskProgress?.Progress)%;" aria-valuenow="@TaskProgress?.Progress" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    <div class="task-duration">
        @TaskProgress?.Quest.DurationSeconds s
    </div>
</div>

@code {
    [Parameter]
    public QuestProgress? TaskProgress { get; set; }
}
