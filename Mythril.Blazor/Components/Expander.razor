@using Microsoft.JSInterop
@inject IJSRuntime JS

<div class="expander">
    <div class="expander-header" @onclick="Toggle">
        <span>@Header</span>
        <span class="expander-icon @(isExpanded ? "expanded" : "")">â–¼</span>
    </div>
    <div @ref="contentRef" class="expander-content @(isExpanded ? "open" : "closed")">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public string? Header { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private bool isExpanded = false;
    private ElementReference contentRef;

    private async Task Toggle()
    {
        if (!isExpanded)
        {
            await JS.InvokeVoidAsync("expander.expand", contentRef);
        }
        else
        {
            await JS.InvokeVoidAsync("expander.collapse", contentRef);
        }
        isExpanded = !isExpanded;
    }

