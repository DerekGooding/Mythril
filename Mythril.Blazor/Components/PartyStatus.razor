@using Mythril.Data

<h3>Party Status</h3>

@if (Party != null)
{
    @foreach (var character in Party)
    {
        <div>
            <p>@character.Name (@character.JobName)</p>
            <p>HP: @character.Health / @character.MaxHealth</p>
            <p>JP: @character.JobPoints</p>
        </div>
    }
}

@code {
    [Parameter]
    public IReadOnlyList<Character>? Party { get; set; }
}
