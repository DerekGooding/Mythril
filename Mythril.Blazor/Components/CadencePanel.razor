@using Mythril.Data

<div class="hand-panel">
    @if (Cadences is not null)
    {
        @foreach (var cadence in Cadences)
        {
            <CadenceDragExpander Cadence="cadence">
                <CadenceTree CadenceData="cadence" />
            </CadenceDragExpander>
        }
    }
</div>

@code {
    [Parameter]
    public IEnumerable<Cadence>? Cadences { get; set; }

    protected override void OnParametersSet()
    {
        Console.WriteLine($"CadencePanel: Received {Cadences?.Count() ?? 0} cadences.");
    }
}
