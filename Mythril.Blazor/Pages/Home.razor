        resourceManager.SetData(tasks, characters, jobs, items);

        timer = new Timer(100);
        timer.Elapsed += (sender, args) => { _ = System.Threading.Tasks.Task.Run(OnTimerElapsed); };
        timer.AutoReset = true;
        timer.Enabled = true;
    }

